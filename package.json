{
  "name": "betterweb",
  "version": "1.0.0",
  "description": "",
  "main": "betterweb.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy-manifest": "ncp manifest.json dist/manifest.json",
    "copy-images": "ncp src/images dist/images",
    "copy-styles": "ncp src/styles.css dist/styles.css",
    "watch-background": "parcel watch src/background.ts",
    "watch-popup": "parcel watch src/popup/popup.html",
    "watch-content": "parcel watch src/content/content.tsx",
    "build-background": "parcel build src/background.ts --no-source-maps",
    "build-popup": "parcel build src/popup/popup.html --no-source-maps",
    "build-content": "parcel build src/content/content.tsx --no-source-maps",
    "clean": "rimraf dist/*",
    "ensure-dist": "mkdirp dist && rimraf dist/*",
    "dev": "npm run ensure-dist && concurrently \"npm run watch-content\" \"npm run watch-popup\" \"npm run watch-background\" \"npm run copy-manifest\" \"npm run copy-images\" \"npm run copy-styles\"",
    "build": "npm run ensure-dist && npm run copy-manifest && npm run copy-images && npm run copy-styles && npm run build-background && npm run build-popup && npm run build-content && cross-zip dist dist.zip",
    "start": "npm run dev",
    "lint": "eslint ./src/*/**/*.ts ./src/*/**/*.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shaunchurch/betterweb-extension.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shaunchurch/betterweb-extension/issues"
  },
  "homepage": "https://github.com/shaunchurch/betterweb-extension#readme",
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.83",
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.8.4",
    "@types/styled-components": "^4.1.14",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "concurrently": "^4.1.0",
    "cross-zip-cli": "^1.0.0",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.12.4",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "parcel-bundler": "^1.12.3",
    "rimraf": "^2.6.3",
    "typescript": "next"
  },
  "browserslist": [
    "last 1 Chrome version"
  ]
}
