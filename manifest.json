{
  "manifest_version": 2,
  "name": "Betterweb",
  "version": "0.4.0",
  "applications": {
    "gecko": {
      "strict_min_version": "54.0a1"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "https://localhost/*",
    "https://betterweb-api.shaun.church/*"
  ],
  "web_accessible_resources": [
    "*.svg",
    "*.png",
    "images/*.png",
    "images/*.svg",
    "icons/*.png"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
